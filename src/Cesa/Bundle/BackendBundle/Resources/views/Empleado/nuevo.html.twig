{% extends '::backend.html.twig' %}

{% block navprin %}
    <li><a href="#">Perfil</a></li>
    <li><a href="{{ path('backend_logout') }}">Cerrar Sesion</a></li>
{% endblock %}

{% block nevegacion %}
    <li><a href="{{ path('backend_home') }}">Inicio</a></li>
    <li class="active"><a href="{{ path('backend_empleado_home') }}">Empleado</a></li>
    <li><a href="{{ path('backend_cliente_home') }}">Cliente</a></li>
    <li><a href="{{ path('backend_documento_home') }}">Documento</a></li>
    <li><a href="{{ path('backend_tramite_home') }}">Tramite</a></li>

{% endblock %}

{% block contenido %}
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Registro del Empleado</h3>
        </div>
        <br>
        <form class="form-horizontal" action="{{ path('backend_empleado_nuevo') }}" method="POST" {{ form_enctype(form) }} class="form-horizontal" role="form">
            {{ form_errors(form) }}
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-3 control-label">Nombres</label>
              <div class="col-sm-8">
                  {{ form_errors(form.nombres) }}
                  {{ form_widget(form.nombres, { 'attr': {'class': 'form-control'} }) }}
              </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-3 control-label">Apellido Paterno</label>
                <div class="col-sm-8">
                    {{ form_errors(form.apPaterno) }}
                    {{ form_widget(form.apPaterno, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-3 control-label">Apellido Materno</label>
                <div class="col-sm-8">
                    {{ form_errors(form.apMaterno) }}
                    {{ form_widget(form.apMaterno, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-3 control-label">Cargo</label>
                <div class="col-sm-4">
                    {{ form_errors(form.cargo) }}
                    {{ form_widget(form.cargo, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-3 control-label">Usuario</label>
                <div class="col-sm-4">
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="col-sm-3"></div><button type="submit" class="btn btn-primary">Guardar</button>
            {{ form_widget(form) }}
        </form>
        <br>
    </div>
  </div>
{% endblock %}